<Window x:Class="wpf_app.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpf_app"
        mc:Ignorable="d"
        Title="Pathfinding">
    <DockPanel LastChildFill="True">
        <Menu DockPanel.Dock="Top" Padding="5">
            <MenuItem Header="Algorithm" >
                <MenuItem Header="A*" Click="OnAStarClick" />
                <MenuItem Header="Potential Fields" />
            </MenuItem>
            <MenuItem Header="E_xit" Click="OnExitClick" />
        </Menu>
        <DockPanel LastChildFill="True" x:Name="MainContainer"></DockPanel>
    </DockPanel>
</Window>
